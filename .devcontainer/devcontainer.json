{
  "name": "zerg-worker",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "NODE_VERSION": "20",
      "PYTHON_VERSION": "3.12"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "source=zerg-claude-tasks,target=/root/.claude/tasks,type=volume",
    "source=zerg-claude-config,target=/root/.claude,type=volume"
  ],
  "containerEnv": {
    "CLAUDE_CODE_TASK_LIST_ID": "${localEnv:ZERG_FEATURE}",
    "ZERG_WORKER_ID": "${localEnv:ZERG_WORKER_ID:-0}",
    "ZERG_FEATURE": "${localEnv:ZERG_FEATURE:-unknown}",
    "ZERG_BRANCH": "${localEnv:ZERG_BRANCH:-main}",
    "ZERG_PORT": "${localEnv:ZERG_PORT:-49152}"
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",
  "runArgs": [
    "--init",
    "--privileged"
  ],
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [],
      "settings": {}
    }
  }
}
