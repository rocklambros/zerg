#!/bin/bash
# ZERG Pre-commit Hook
# Validates commits before they are created

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "Running ZERG pre-commit checks..."

# Track if any check failed
FAILED=0

# 1. Non-ASCII filename check
echo -n "  Checking for non-ASCII filenames... "
if git diff --cached --name-only --diff-filter=A -z | LC_ALL=C tr -d '[ -~]\0' | read -r -n1; then
    echo -e "${RED}FAILED${NC}"
    echo "Error: Attempted to add file with non-ASCII filename."
    echo "This can cause problems on different platforms."
    FAILED=1
else
    echo -e "${GREEN}OK${NC}"
fi

# 2. Secrets check - look for common secret patterns
echo -n "  Checking for potential secrets... "
SECRETS_PATTERN='(password|secret|api_key|apikey|access_token|auth_token|private_key|credentials)[[:space:]]*[=:][[:space:]]*["\047][^"\047]{8,}'

if git diff --cached --diff-filter=ACMR -U0 | grep -iE "$SECRETS_PATTERN" > /dev/null 2>&1; then
    echo -e "${RED}FAILED${NC}"
    echo "Error: Potential secret detected in staged changes."
    echo "Please review your changes and remove any sensitive data."
    FAILED=1
else
    echo -e "${GREEN}OK${NC}"
fi

# 3. Check for common sensitive files
echo -n "  Checking for sensitive files... "
SENSITIVE_FILES=".env .env.local .env.production credentials.json service-account.json id_rsa"
STAGED_FILES=$(git diff --cached --name-only)

for file in $SENSITIVE_FILES; do
    if echo "$STAGED_FILES" | grep -qE "(^|/)$file$"; then
        echo -e "${RED}FAILED${NC}"
        echo "Error: Attempting to commit sensitive file: $file"
        FAILED=1
        break
    fi
done

if [ $FAILED -eq 0 ]; then
    echo -e "${GREEN}OK${NC}"
fi

# 4. Commit message validation (if message file exists)
if [ -f "$1" ]; then
    echo -n "  Validating commit message... "
    COMMIT_MSG=$(head -n1 "$1")

    # Check minimum length
    if [ ${#COMMIT_MSG} -lt 10 ]; then
        echo -e "${RED}FAILED${NC}"
        echo "Error: Commit message too short (minimum 10 characters)."
        FAILED=1
    # Check for conventional commit prefix
    elif ! echo "$COMMIT_MSG" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|build|ci|perf|revert|merge|wip)(\(.+\))?:|^Merge "; then
        echo -e "${YELLOW}WARNING${NC}"
        echo "Warning: Commit message doesn't follow conventional commit format."
        echo "Consider using: feat|fix|docs|style|refactor|test|chore|build|ci|perf|revert"
    else
        echo -e "${GREEN}OK${NC}"
    fi
fi

# 5. Check for large files
echo -n "  Checking for large files... "
MAX_SIZE=5000000  # 5MB

LARGE_FILES=""
for file in $(git diff --cached --name-only --diff-filter=ACM); do
    if [ -f "$file" ]; then
        SIZE=$(wc -c < "$file")
        if [ "$SIZE" -gt "$MAX_SIZE" ]; then
            LARGE_FILES="$LARGE_FILES $file"
        fi
    fi
done

if [ -n "$LARGE_FILES" ]; then
    echo -e "${YELLOW}WARNING${NC}"
    echo "Warning: Large files detected (>5MB):$LARGE_FILES"
    echo "Consider using Git LFS for large files."
else
    echo -e "${GREEN}OK${NC}"
fi

# Exit with failure if any check failed
if [ $FAILED -ne 0 ]; then
    echo ""
    echo -e "${RED}Pre-commit checks failed. Commit aborted.${NC}"
    exit 1
fi

echo -e "${GREEN}All pre-commit checks passed.${NC}"
exit 0
